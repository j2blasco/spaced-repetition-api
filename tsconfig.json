{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
  "moduleResolution": "bundler",
  "skipLibCheck": true,
  "types": ["vitest/globals"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "src/**/*.spec.ts"]
}
